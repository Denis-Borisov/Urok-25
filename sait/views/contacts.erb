<h2>Контакты</h2>

<form action="/contacts" method="post">
  <div class="form-group">
    <label>Ваш email:</label>
    <input name="email" type="text" class="form-control" aria-describedby="emailHelp" placeholder="Введите ваш email" value="<%= @mail %>">
  </div>

  
<div class="form-group">
    <label>Введите сообщение</label>
    <textarea name="message" type="text" class="form-control" rows="3" placeholder="Введите сообщение"></textarea>
  </div>
  
  
    <button type="submit" class="btn btn-primary">Отправить</button>

</form>